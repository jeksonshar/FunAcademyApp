<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_blue">

        <ImageView
            android:id="@+id/imageViewOfList"
            android:layout_width="@dimen/app_margin_24"
            android:layout_height="@dimen/app_margin_24"
            android:layout_marginStart="@dimen/app_margin_16"
            android:layout_marginTop="@dimen/app_margin_12"
            android:layout_marginEnd="@dimen/app_margin_8"
            android:layout_marginBottom="@dimen/app_margin_8"
            android:contentDescription="@string/image_view"
            android:src="@drawable/target_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/movieList"
            app:layout_constraintEnd_toStartOf="@id/moviesListView"/>

        <TextView
            android:id="@+id/moviesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movies_list"
            android:textColor="@color/white"
            android:textSize="@dimen/app_default_text_14"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageViewOfList"
            app:layout_constraintTop_toTopOf="@id/imageViewOfList"
            app:layout_constraintBottom_toBottomOf="@id/imageViewOfList"
            app:layout_constraintEnd_toStartOf="@id/moviesListView"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/app_margin_8"
            android:layout_marginEnd="@dimen/app_margin_16"
            android:contentDescription="@string/image_view"
            android:src="@drawable/reload"
            app:layout_constraintTop_toTopOf="@id/imageViewOfList"
            app:layout_constraintBottom_toBottomOf="@id/imageViewOfList"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movieList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/app_margin_10"
        android:layout_marginTop="@dimen/app_margin_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewOfList" />

    <ProgressBar
        android:id="@+id/progressBarWhileListEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_24"
        android:indeterminateTint="@color/white_gray"
        app:layout_constraintTop_toBottomOf="@id/imageViewOfList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progressBarWhileLoadNextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin_24"
        android:indeterminateTint="@color/white_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>