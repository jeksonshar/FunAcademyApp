<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieItemListLand"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/app_margin_start_4"
    android:layout_marginEnd="@dimen/app_margin_start_8"
    android:layout_marginTop="@dimen/app_margin_top_8"
    android:layout_marginBottom="@dimen/app_padding_bottom_8"
    android:background="@drawable/layout_list_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="170:296"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/movieOfListImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="@string/image_view"
            app:layout_constraintDimensionRatio="166:248"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:src="@drawable/movie_list_image1" />

        <TextView
            android:id="@+id/ageCategoryMovieListView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/app_margin_start_8"
            android:layout_marginTop="@dimen/app_margin_top_8"
            android:background="@drawable/bg_movie_rating"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/app_default_text_12"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/rating_movie" />

        <RatingBar
            android:id="@+id/ratingBarOfMovieList"
            style="@style/Theme.Movies.RatingBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:foregroundGravity="center"
            android:numStars="5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:stepSize="1"
            android:theme="@style/Theme.Movies.RatingBar"
            android:translationX="-4dp"
            app:layout_constraintBottom_toBottomOf="@id/movieOfListImage"
            app:layout_constraintStart_toStartOf="parent"
            tools:rating="2" />

        <TextView
            android:id="@+id/reviewMovieListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/app_default_text_8"
            android:translationX="-10dp"
            app:layout_constraintBottom_toBottomOf="@id/movieOfListImage"
            app:layout_constraintStart_toEndOf="@id/ratingBarOfMovieList"
            tools:text="@string/review_movie" />

        <TextView
            android:id="@+id/tagMovieListView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin_start_8"
            android:layout_marginEnd="@dimen/main_margin_end_16"
            android:layout_marginBottom="24dp"
            android:textColor="@color/red"
            android:textSize="@dimen/app_default_text_8"
            app:layout_constraintBottom_toBottomOf="@id/movieOfListImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/tag_movie" />

        <TextView
            android:id="@+id/nameOfMovieListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/app_margin_end_8"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/app_default_text_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieOfListImage"
            tools:text="@string/name_movie_for_list" />

        <TextView
            android:id="@+id/durationMovieView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/app_margin_start_8"
            android:layout_marginEnd="@dimen/app_margin_end_8"
            android:layout_marginBottom="8dp"
            android:textColor="#565665"
            android:textSize="@dimen/app_default_text_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameOfMovieListView"
            tools:text="@string/_137_min" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>